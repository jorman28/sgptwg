    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ArchivosController</servlet-name>
        <url-pattern>/ArchivosController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>jsp/inicioSesion.jsp</welcome-file>
    </welcome-file-list>
</web-app>
